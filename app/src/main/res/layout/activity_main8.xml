<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/myimage5"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:hint="Payment Options"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPricelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:hint="Price: Rs 2334"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/abril_fatface"
        android:hint="Payment Options"
        android:textColor="@color/teal_700"
        android:textSize="24dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNetBank"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonfile"
        android:backgroundTint="#82E80C"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:padding="20dp"
        android:text="Net Banking"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDbCard"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonfile"
        android:backgroundTint="#82E80C"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:padding="20dp"
        android:text="Debit Card"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCounter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonfile"
        android:backgroundTint="#82E80C"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:padding="20dp"
        android:text="Cash at Counter"
        android:textColor="@color/black"
        android:textStyle="bold" />

</LinearLayout>